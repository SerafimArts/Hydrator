{
    "$id": "file:///config.schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Hydrator Configuration",
    "type": "object",
    "patternProperties": {
        "^\\x5c?[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*(\\x5c[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*)*$": {
            "type": "object",
            "properties": {
                "fields": {
                    "$ref": "#/definitions/fields"
                },
                "attributes": {
                    "$ref": "#/definitions/attributes"
                },
                "embedded": {
                    "$ref": "#/definitions/embedded"
                }
            },
            "patternProperties": {
                "^[\\x5c]*[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*([\\x5c]+[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*)*$": {
                    "$ref": "#/definitions/custom"
                }
            },
            "description": "The name of the PHP class for which mapping rules are created"
        }
    },
    "definitions": {
        "custom": {
            "type": ["array", "object"],
            "items": {
                "type": ["array", "object"]
            }
        },
        "fields": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*$": {
                    "type": "string",
                    "pattern": "^[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff\\\\.]*$",
                    "description": "The class property name"
                }
            },
            "description": "Rules for direct mapping in class properties",
            "additionalProperties": false
        },
        "attributes": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*$": {
                    "type": "object",
                    "patternProperties": {
                        "^[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff\\\\.]*$": {
                            "type": "string",
                            "description": "An attribute key mapping"
                        }
                    },
                    "additionalProperties": false,
                    "description": "The class property name"
                }
            },
            "description": "Rules for mapping in class property as list of array attributes",
            "additionalProperties": false
        },
        "embedded": {
            "type": "object",
            "patternProperties": {
                "^[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*$": {
                    "type": "string",
                    "pattern": "^[\\x5c]*[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*([\\x5c]+[a-zA-Z_\\x80-\\xff][a-zA-Z0-9_\\x80-\\xff]*)*$",
                    "description": "The class property name. Value should be the class name of the ValueObject"
                }
            },
            "description": "Rules for direct mapping in class properties through ValueObject",
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}
